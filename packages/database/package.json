    "@prisma/client": "^7.0.1",
    "@triae/env": "workspace:^",
    "@triae/tsconfig": "workspace:^",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^11.0.0",
    "prisma": "^7.0.1",
    "zod": "^4.1.13"
  }
}